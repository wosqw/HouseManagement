<Window x:Class="HuseManagement.AddEditRequestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавление/Редактирование заявки"
        Height="500" Width="500"
        Style="{StaticResource WindowStyle}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Адрес:" Style="{StaticResource TitleTextBlockStyle}" />
            <TextBox x:Name="AddressTextBox" Style="{StaticResource TextBoxStyle}" Text="{Binding Owners.Houses.Address, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text="ФИО заявителя:" Style="{StaticResource TitleTextBlockStyle}" />
            <TextBox x:Name="ApplicantNameTextBox" Style="{StaticResource TextBoxStyle}" Text="{Binding Owners.OwnerName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text="Телефон:" Style="{StaticResource TitleTextBlockStyle}" />
            <TextBox x:Name="PhoneTextBox" Style="{StaticResource TextBoxStyle}" Text="{Binding Owners.Phone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text="Описание:" Style="{StaticResource TitleTextBlockStyle}" />
            <TextBox x:Name="DescriptionTextBox" Style="{StaticResource TextBoxStyle}" Text="{Binding ProblemDescription, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text="Исполнитель:" Style="{StaticResource TitleTextBlockStyle}" />
            <TextBox x:Name="ExecutorTextBox" Style="{StaticResource TextBoxStyle}" Text="{Binding Employees.FullName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text="Статус:" Style="{StaticResource TitleTextBlockStyle}" />
            <TextBox x:Name="StatusTextBox" Style="{StaticResource TextBoxStyle}" Text="{Binding RequestStatus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Сохранить" Style="{StaticResource AccentButtonStyle}" Padding="14,8" MinWidth="100" Click="Save_Click" />
                <Button Content="Отмена" Style="{StaticResource AccentButtonStyle}" Padding="14,8" MinWidth="100" Click="Cancel_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
