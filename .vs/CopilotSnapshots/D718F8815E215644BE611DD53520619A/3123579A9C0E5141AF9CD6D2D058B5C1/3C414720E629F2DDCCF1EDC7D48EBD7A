<Window x:Class="HuseManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HuseManagement"
        mc:Ignorable="d"
        Title="Управление заявками"
        Height="450"
        Width="800"
        Style="{StaticResource WindowStyle}"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <!-- Логотип компании (заполняется из ресурсов в коде) -->
        <Image x:Name="logo"
               Width="30"
               Height="24"
               Margin="10,10,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top" RenderTransformOrigin="0.56,0.477" />

        <!-- Заголовок -->
        <TextBlock Text="Список заявок"
                   Style="{StaticResource TitleTextBlockStyle}"
                   Margin="10,5,10,10"
                   HorizontalAlignment="Center" />

        <!-- Список заявок -->
        <ListView x:Name="RequestsListView"
                  Margin="10,40,10,10"
                  Background="{StaticResource SecondaryBackgroundBrush}">
            <ListView.View>
            <GridView>
                    <!-- RepairRequests model fields mapping -->
                    <!-- Address is stored on the request (int) or via Owners; showing request Address field -->
                    <!-- Адрес берем из связанной сущности: RepairRequests -> Owners -> Houses.Address -->
                    <GridViewColumn Header="Адрес" DisplayMemberBinding="{Binding Owners.Houses.Address}" />
                    <!-- Applicant name comes from the Owners navigation property -->
                    <GridViewColumn Header="ФИО заявителя" DisplayMemberBinding="{Binding Owners.OwnerName}" />
                    <!-- Phone comes from Owners.Phone -->
                    <GridViewColumn Header="Телефон" DisplayMemberBinding="{Binding Owners.Phone}" />
                    <!-- Problem description field in the model -->
                    <GridViewColumn Header="Описание" DisplayMemberBinding="{Binding ProblemDescription}" />
                    <!-- Responsible employee navigation property -> FullName -->
                    <GridViewColumn Header="Исполнитель" DisplayMemberBinding="{Binding Employees.FullName}" />
                    <!-- Request status field in the model -->
                    <GridViewColumn Header="Статус" DisplayMemberBinding="{Binding RequestStatus}" />
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Кнопки управления -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="10">
            <Button Content="Добавить"
                    Style="{StaticResource AccentButtonStyle}"
                    Click="AddRequest_Click" />
            <Button Content="Редактировать"
                    Style="{StaticResource AccentButtonStyle}"
                    Click="EditRequest_Click" />
            <Button Content="Удалить"
                    Style="{StaticResource AccentButtonStyle}"
                    Click="DeleteRequest_Click" />
        </StackPanel>
    </Grid>
</Window>
