                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="ФИО заявителя" Width="120">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Owners.OwnerName}" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Телефон" Width="70" DisplayMemberBinding="{Binding Owners.Phone}" />

                    <GridViewColumn Header="Описание" Width="110">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ProblemDescription}" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" MaxWidth="290" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Исполнитель" Width="120">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Employees.FullName}" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Статус" Width="80" DisplayMemberBinding="{Binding RequestStatus}" />
                </GridView>
            </ListView.View>
        </ListView>

