                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView>
                    <!-- Set explicit widths and use cell templates with wrapping so long columns don't hide others -->
                    <GridViewColumn Header="Адрес" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Owners.Houses.Address}" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" MaxWidth="270" />
